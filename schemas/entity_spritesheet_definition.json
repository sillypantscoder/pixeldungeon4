{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"tileSize": {
			"type": "number",
			"minimum": 0
		},
		"initialAnimation": {
			"type": "string"
		},
		"animations": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"frames": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"x": { "type": "number", "minimum": 0 },
								"y": { "type": "number", "minimum": 0 }
							}
						}
					},
					"next": { "type": "string" }
				}
			}
		}
	},
	"required": [
		"tileSize",
		"initialAnimation",
		"animations"
	]
}