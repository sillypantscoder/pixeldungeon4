{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"collisionType": {
			"type": "string",
			"enum": ["none", "normal", "wall"]
		},
		"canSeeThrough": {
			"type": "boolean"
		},
		"onEnter": {
			"oneOf": [
				{ "type": "string", "enum": ["none"] },
				{
					"type": "object",
					"properties": {
						"type": { "type": "string", "enum": ["change_tile"] },
						"tile": { "type": "string" }
					}
				}
			]
		},
		"onLeave": {
			"oneOf": [
				{ "type": "string", "enum": ["none"] },
				{
					"type": "object",
					"properties": {
						"type": { "type": "string", "enum": ["change_tile"] },
						"tile": { "type": "string" }
					}
				}
			]
		}
	},
	"required": [
		"collisionType",
		"canSeeThrough",
		"onEnter",
		"onLeave"
	]
}