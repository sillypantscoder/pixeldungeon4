{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"collisionType": {
			"type": "string",
			"enum": ["none", "normal", "wall"]
		},
		"canSeeThrough": {
			"type": "boolean"
		},
		"onEnter": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "object",
						"properties": {
							"type": { "type": "string", "enum": ["change-tile"] },
							"tile": { "type": "string" }
						}
					},
					{
						"type": "object",
						"properties": {
							"type": { "type": "string", "enum": ["spawn-particles"] },
							"particle_data": { "type": "string" }
						}
					}
				]
			}
		},
		"onLeave": {
			"$ref": "#/properties/onEnter"
		}
	},
	"required": [
		"collisionType",
		"canSeeThrough",
		"onEnter",
		"onLeave"
	]
}